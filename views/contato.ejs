<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <title>Formul√°rio de Contato</title>
  <link rel="stylesheet" href="/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="/index.js" defer></script>
</head>

<body class="bg-light">

  <%- include('partials/navbar') %>

  <main>

    <div class="container mt-5">
      <h2 class="mb-4 text-center">Entre em Contato</h2>

      <form action="/contato/mensagem" method="POST" class="bg-white p-4 rounded shadow">
        <div class="mb-3">
          <label for="nome" class="form-label">Nome</label>
          <input type="text" class="form-control" id="nome"  oninput= "upperCase()" name="nome" required>
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">E-mail</label>
          <input type="email" class="form-control" id="email"  name="email" required>
        </div>

        <div class="mb-3">
          <label for="mensagem" class="form-label">Mensagem</label>
          <textarea class="form-control" id="mensagem" name="mensagem" rows="4" required></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Enviar</button>

      
        <% if (typeof mensagem !== 'undefined' && mensagem) { %>
          <div class="alert alert-danger mt-3" role="alert">
            <%= mensagem %>
          </div>
        <% } %>
        
        

      </form>
    </div>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </main>
  <%- include('partials/footer') %>
</body>
</html>