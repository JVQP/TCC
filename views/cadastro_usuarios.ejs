        crossorigin="anonymous"></script>
    <script src="/index.js" defer></script>

</head>

<body>

    <%- include('partials/navbar') %>

    <main>
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card p-4 shadow" style="width: 100%; max-width: 500px;">
         <h1>Registrar Usuário</h1>
            <form action="" method="POST">
                <div class="mb-3">
                    <label for="inputEmail" class="form-label">E-Mail: </label>
                    <input type="inputEmail" class="form-control" name="inputEmail" id="inputEmail" placeholder="Informe o seu E-mail.." required>
                </div>
                <div class="mb-3">
                    <label for="nome" class="form-label">Nome completo: </label>
                    <input type="inputNome" class="form-control" name="inputNome" placeholder="Informe o seu nome completo.." required>
                </div>

                <div class="mb-3">
                    <label for="inputSenha" class="form-label">Senha: </label>
                    <input type="password" class="form-control" name="inputSenha" placeholder="Digite a sua senha.." required>
                </div>
                <div class="mb-3">
                    <label for="inputConfirmar" class="form-label">Confirmar senha: </label>
                    <input type="password" class="form-control" name="inputConfirmar" placeholder="Digite novamente.." required>
                </div>
                <div class="mb-3">
                    <label for="inputTipoUsuario" class="form-label"> Tipo de Usuário:
                        <select class="form-select" id="inputTipoUsuario" name="inputTipoUsuario" aria-label="Default select example" required>
                            <option selected>Selecione o tipo de usuário..</option>
                            <option value="Professor">Professor</option>
                            <option value="Aluno">Aluno</option>
                            <option value="Empresa">Empresa</option> 
                    </label>
                </div>
                 
                <br>
                  
                <input type="submit" id="registro" class="btn btn-primary" value="Registrar">
    
            </form>
        </div>
    </div>
</main>

<footer class="bg-primary text-white text-center text-lg-start mt-5">
